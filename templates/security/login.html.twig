{% extends 'base.html.twig' %}
{% block body %}
    <div class="display-3 text-center pb-5">Connexion</div>
    <form action="{{ path('login') }}" method="post" class="md-form col-4 ml-auto mr-auto">
        <div class="form-group">
            <input placeholder="Adresse email" required type="text" class="form-control" name="_username">
        </div>
        <div class="form-group">
            <input placeholder="mot de passe" required type="password" class="form-control" name="_password">
        </div>
        <div class="form-group row no-gutters">
            <button type="submit" class="btn btn-outline-success col-6">Connexion</button>
            <div class="col-6"><a class="btn btn-outline-info ml-2" href="{{ path('security_registration') }}">Inscription</a></div>
        </div>
    </form>
{% endblock %}