					<div class="col-sm-12">
						{{ form_label(form.address) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.address, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
				<div class="col-sm-6 no-gutters">
					<div class="row">
						<div class="col-sm-6 no-gutters">
							<div class="col-sm-12">
								{{ form_label(form.streetNumber) }}
							</div>
							<div class="col-sm-12">
								{{ form_widget(form.streetNumber, { 'attr': { 'class': 'form-control' } }) }}
							</div>
						</div>
						<div class="col-sm-6 no-gutters">
							<div class="col-sm-12">
								{{ form_label(form.boxNumber) }}
							</div>
							<div class="col-sm-12">
								{{ form_widget(form.boxNumber, { 'attr': { 'class': 'form-control' } }) }}
							</div>
						</div>
					</div>

				</div>
			</div>
			<div class="form-group row mt-4">
				<div class="col-sm-3">
					{{ form_widget(form.save, { 'attr': { 'class': 'btn btn-outline-success btn-block' }}) }}
				</div>
				<div class="col-sm-3"><a class="btn btn-outline-warning w-100" href="{{ path('userList') }}">Retour Ã  la liste</a></div>
			</div>
		</fieldset>
		{{ form_end(form) }}
	</div>
{% endblock %}
