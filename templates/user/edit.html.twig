{% extends 'base.html.twig' %}
{% block body %}
	<div class="example-wrapper">
		<div class="display-3 text-center pt-5">Editer utilisateur</div>
		{{ form_start(form) }}
		<fieldset>
			<div class="form-group row">
				<div class="col-sm-6 no-gutters ">
					<div class="col-sm-12">
						{{ form_label(form.firstName) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.firstName, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
				<div class="col-sm-6 no-gutters">
					<div class="col-sm-12">
						{{ form_label(form.lastName) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.lastName, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-6 no-gutters">
					<div class="col-sm-12">
						{{ form_label(form.email) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
				<div class="col-sm-6 no-gutters">
					<div class="col-sm-12">
						{{ form_label(form.gender) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.gender, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-6 no-gutters">
					<div class="col-sm-12">
						{{ form_label(form.phoneNumber) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.phoneNumber, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
				<div class="col-sm-6 no-gutters">
					<div class="col-sm-12">
						{{ form_label(form.gsmNumber) }}
					</div>
					<div class="col-sm-12">
						{{ form_widget(form.gsmNumber, { 'attr': { 'class': 'form-control' } }) }}
					</div>
				</div>
			</div>
			<div class="form-group row">
