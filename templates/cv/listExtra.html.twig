{% for extra in curiculum.extra %}
	{% if extra.active %}
		<div class="col-4">
			<div class="h5 text-center bg-dark mb-0 p-2">
				<a href="#" class="ml-1 jq-dell-extra" id="{{extra.id}}" style="position:absolute; top:0px; right:21px;">
					<i class="fas fa-times text-danger"></i>
				</a>
				<div class="mt-4">
					{{extra.title|capitalize}}
				</div>
			</div>
			<div class="bg-secondary p-3">
				<div>
					<input type="text" id="input-extra-detail-{{extra.id}}" placeholder="Entrez un dÃ©tail">
					<a href="#" class="jq-add-detail-extra" data-idextra="{{extra.id}}">
						<i class="fas fa-plus-circle btn text-success" style="font-size:1.5rem;"></i>
					</a>
				</div>
				{% for detail in extra.details %}
					<div class="w-100 border-bottom border-dark">
						<div class="color-success mr-2 bg-secondary border-secondary text-white" style="font-size:1rem;">{{detail.detail}}
							<a href="#" class="ml-2">
								<i class="fas fa-trash-alt text-danger jq-dell-detail-extra" data-idextradetail="{{detail.id}}" aria-hidden="true"></i>
							</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}
{% endfor %}
