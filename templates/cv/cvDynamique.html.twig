<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Free CV</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	</head>
	<body>
		<div style="width:30%; height:350mm;" class="p-3 bg-dark text-white float-left">
			<img src="{{ vich_uploader_asset(curiculum,'imageFile') | imagine_filter('carre') }}" alt="{{curiculum.imageName}}">
			<h5 class="text-uppercase font-weight-bold pt-3" style=" color:#f39c12;">{{ curiculum.title }}</h5>
			<h5 style="line-height:1.5;">
				<span class="text-uppercase">
					{{ curiculum.user.lastName }}
				</span>
				{{ curiculum.user.firstName|capitalize }}
				<br>
				{% if curiculum.user.phoneNumber and curiculum.user.phoneNumber != "" %}
					{{ curiculum.user.phoneNumber }}
					<br>
				{% endif %}
				{{ curiculum.user.gsmNumber }}
				<br>
				{{ curiculum.user.email }}
				<br>
				{{ curiculum.user.address }}
				{{ curiculum.user.streetNumber }}
				/
				{{ curiculum.user.boxNumber }}
				<br>
				7000 Mons
			</h5>
			{% for extra in curiculum.extra %}
				<div class="pt-3">
					<p class="text-uppercase text-bold font-weight-bold text-muted">{{ extra.title }}</p>
					<p>
						{% for detail in extra.details %}
							{% if loop.last %}
								{{ detail.detail}}
							{% else %}
								{{ detail.detail}}
								-
							{% endif %}
						{% endfor %}
					</p>
				</div>
			{% endfor %}
		</div>
		<div style="width:70%;" class="py-5 float-right">
			<div class="float-left w-25" style="width: 0;height: 0;border-top: 20px solid transparent;border-bottom: 20px solid transparent;border-left: 60px solid #f39c12;"></div>
			<div class="w-75 h3 text-uppercase font-weight-bold float-left" style="color:#f39c12;">
				Expérience professionnelles
			</div>
			{% for job in curiculum.job %}
				<div class="clearfix"></div>
				<div class="w-100 py-3">
					<div class="text-center px-3 text-muted float-left" style="width:20%;">
						{{ job.start|date("d/m/Y")}}
						<br>
						-
						<br>
						{% if job.end == null %}
							Maintenant
						{% else %}
							{{ job.end|date("d/m/Y")}}
						{% endif %}
					</div>
					<div class="float-left" style="width:80%;">
						<p class="h5 text-uppercase font-weight-bold w-100">
							{{ job.descr}}
							{% if job.societyName %}
								<small class="text-muted">{{ job.societyName }}</small>
							{% endif %}
						</p>
						{% if job.details %}
							<p class="pr-2">
								{% for detail in job.details %}
									{% if loop.last %}
										{{ detail.detail }}
									{% else %}
										{{ detail.detail }}
										-
									{% endif %}
								{% endfor %}
							</p>
						{% endif %}
					</div>
				</div>
				{% if loop.last %}
					<div class="clearfix border-bottom py-3 mb-4"></div>
				{% else %}
					<div class="clearfix border-bottom py-3"></div>
				{% endif %}
			{% endfor %}
			<div class="float-left w-25" style="width: 0;height: 0;border-top: 20px solid transparent;border-bottom: 20px solid transparent;border-left: 60px solid #f39c12;"></div>
			<div class="w-75 h3 text-uppercase font-weight-bold float-left" style="color:#f39c12;">
				formations / diplômes
			</div>
			{% for formation in curiculum.formation %}
				<div class="clearfix"></div>
				<div class="w-100 py-3">
					<div class="text-center px-3 text-muted float-left" style="width:20%;">
						{{ formation.start|date("d/m/Y")}}
						<br>
						-
						<br>
						{% if formation.end == null %}
							Maintenant
						{% else %}
							{{ formation.end|date("d/m/Y")}}
						{% endif %}
					</div>
					<div class="float-left" style="width:80%;">
						<p class="h5 text-uppercase font-weight-bold w-100 ">
							{{ formation.descr}}
							{% if formation.name %}
								<small class="text-muted">
									{{ formation.name}}
								</small>
							{% endif %}
						</p>
						{% if formation.details %}
							<p class="pr-2">
								{% for detail in formation.details %}
									{% if loop.last %}
										{{ detail.detail }}
									{% else %}
										{{ detail.detail }}
										-
									{% endif %}
								{% endfor %}
							</p>
						{% endif %}
					</div>
				</div>
				{% if loop.last %}
					<div class="clearfix pt-3 mb-5"></div>
				{% else %}
					<div class="clearfix border-bottom py-3"></div>
				{% endif %}
			{% endfor %}
		</div>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	</body>
</html>
